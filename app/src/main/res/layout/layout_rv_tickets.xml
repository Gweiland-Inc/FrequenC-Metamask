<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_ticket"
    android:layout_marginRight="@dimen/_5sdp"
    android:id="@+id/clTicket"
    android:layout_margin="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTicketType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/robotocondensed_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:letterSpacing="0.1"
        android:textColor="@color/black"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Seats : 50/39 left"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/robotocondensed_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTicketType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:letterSpacing="-0.05"
        android:layout_marginBottom="@dimen/_10sdp"
        />

    <ImageView
        android:id="@+id/ivTicket"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSeats"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_ticket"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>