<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp">


    <ImageView
            android:id="@+id/ivHamburger"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_hamburger"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"

            />

    <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toStartOf="@id/ivHamburger"
            android:src="@drawable/notification"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            app:tint="@color/material_grey_500"

            />
    <TextView
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/bg_btn2"
            android:paddingHorizontal="@dimen/_14sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_10sdp"
            android:visibility="invisible"
            />

    <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_toStartOf="@id/ivNotification"
            android:layout_marginVertical="@dimen/_10sdp"
            app:cardBackgroundColor="#F3F4F6"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
            >
        <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/search"
                app:tint="@color/material_grey_800"
                />


        <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivSearch"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_13sdp"
                android:maxLines="1"
                android:hint="Search"
                android:textColor="@color/black"
                android:background="@drawable/et_search"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ivAnimSplashConnct"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_centerVertical="true"
            />


</RelativeLayout>

