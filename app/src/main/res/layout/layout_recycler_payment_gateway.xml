<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/bg_recycler_pg"
    android:layout_marginBottom="@dimen/_10sdp"
    >

    <RelativeLayout
        android:id="@+id/rlIcon"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/bg_recycler_pg_rl"
        android:layout_centerVertical="true"
        >


        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/stripe" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rlIcon"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stripe"
            android:textSize="@dimen/_14sdp"
            style="@style/textViewRegularBold"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPgDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit/Debit card with Easier way to pay online and on your mobile."
            android:layout_toLeftOf="@id/rb"
            android:layout_below="@id/tvPgName"
            android:textSize="@dimen/_12sdp"
            style="@style/textViewRegular"
            android:textColor="@color/material_grey_700"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_4sdp"
            />

        <RadioButton
            android:id="@+id/rb"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>


</RelativeLayout>