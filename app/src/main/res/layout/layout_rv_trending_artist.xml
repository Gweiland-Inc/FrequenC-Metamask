<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:id="@+id/cvRv"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivTrendingArtist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample"
            android:layout_margin="@dimen/_5sdp"
            app:shapeAppearance="@style/RoundCorner"
            />

        <TextView
            android:id="@+id/tvTrendingArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ivTrendingArtist"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="@dimen/_4sdp"
            android:text="Comedy Fiesta"
            android:layout_marginLeft="@dimen/_4sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/material_grey_700"
            style="@style/textViewRegularBold"
            />




        <TextView
            android:id="@+id/tvTrendingArtistEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTrendingArtistName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Count"
            android:background="@drawable/bg_tv_time"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/material_red_500"
            style="@style/textViewRegularBold"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>