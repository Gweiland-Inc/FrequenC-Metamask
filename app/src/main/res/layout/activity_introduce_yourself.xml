<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui_codes.screens.intro.IntroduceYourselfActivity">


 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"

         >

         <pl.droidsonroids.gif.GifImageView
             android:id="@+id/progress_bar"
             android:layout_width="@dimen/_70sdp"
             android:layout_height="@dimen/_50sdp"
             android:elevation="@dimen/_15sdp"
             android:layout_centerInParent="true"
             android:visibility="gone"
             />

     </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginTop="@dimen/_20sdp"
         android:layout_marginHorizontal="@dimen/_10sdp"
         >

         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_3sdp"
             android:background="@color/material_grey_800"
             android:layout_weight="1"
             />

         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_3sdp"
             android:background="@color/material_grey_400"
             android:layout_weight="1"
             />
     </LinearLayout>


    <LinearLayout
        android:id="@+id/llIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        >

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/baseline_person_outline_24"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduce\nYourself"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_28sdp"
            style="@style/textViewRegularBold"
            android:textColor="@color/font_color3"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You won't be able to change this later"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            style="@style/textViewRegular"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/etName"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:hint="First Name"
            android:paddingBottom="@dimen/_10sdp"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:textSize="@dimen/_14sdp"
            />


        <EditText
            android:id="@+id/etEmail"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Email"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_14sdp"

            />

        <EditText
            android:id="@+id/etLocation"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Location"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:textSize="@dimen/_14sdp"

            />

        <TextView
            android:id="@+id/tvDob"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="DD/MM/YY"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:textSize="@dimen/_14sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_30sdp"
            >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
              <TextView
                  android:id="@+id/btnMale"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" Male  "
                  android:background="@drawable/bg_btn_gender"
                  android:paddingHorizontal="@dimen/_32sdp"
                  android:paddingVertical="@dimen/_11sdp"
                  android:textColor="@color/material_grey_800"
                  style="@style/textViewRegularBold"
                  android:layout_alignParentRight="true"
                  android:layout_marginVertical="@dimen/_2sdp"
                  android:layout_marginStart="@dimen/_8sdp"
                  android:layout_marginEnd="@dimen/_8sdp"
                  android:textSize="@dimen/_14sdp"
                  />
          </LinearLayout>

          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/btnFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:background="@drawable/bg_btn_gender"
                    android:paddingHorizontal="@dimen/_32sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:textColor="@color/material_grey_800"
                    style="@style/textViewRegularBold"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:textSize="@dimen/_14sdp"
                    />
            </LinearLayout>


        </LinearLayout>





    </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_20sdp"
         android:layout_marginRight="@dimen/_30sdp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginBottom="@dimen/_20sdp"
         >
         <ImageView
             android:id="@+id/ivNext"
             android:layout_width="@dimen/_32sdp"
             android:layout_height="@dimen/_32sdp"
             android:src="@drawable/arrow_right"
             android:padding = "@dimen/_8sdp"
             android:background="@drawable/bg_img_intro"
             android:layout_alignParentRight="true"
             />


         <ImageView
             android:id="@+id/ivVisible"
             android:layout_width="@dimen/_12sdp"
             android:layout_height="@dimen/_12sdp"
             android:src="@drawable/baseline_visibility_24"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/_20sdp"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="This will be shown on your profile"
             android:layout_marginTop="@dimen/_10sdp"
             android:textSize="@dimen/_10sdp"
             style="@style/textViewRegular"
             android:textColor="@color/black"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/ivVisible"
             android:layout_marginLeft="@dimen/_3sdp"
             android:layout_toLeftOf="@+id/ivNext"
             android:layout_marginRight="@dimen/_3sdp"
             />

     </RelativeLayout>



 </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>