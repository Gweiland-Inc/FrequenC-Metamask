<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_codes.screens.intro.IntroduceYourselfActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        >

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/baseline_person_outline_24"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduce\nYourself"
            android:layout_marginTop="@dimen/_18sdp"
            android:textSize="@dimen/_28sdp"
            style="@style/textViewRegularBold"
            android:textColor="@color/appColor"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You won't be able to change this later"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            style="@style/textViewRegular"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/etName"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:hint="First Name"
            android:paddingBottom="@dimen/_10sdp"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            />


        <EditText
            android:id="@+id/etEmail"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Email"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/etLocation"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="Location"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            />

        <TextView
            android:id="@+id/tvDob"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/edittext_bottom_line"
            android:hint="DD/MM/YY"
            android:textColorHint="@color/material_grey_700"
            style="@style/textViewRegularBold"
            android:textSize="@dimen/_14sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_20sdp"
            >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
              <TextView
                  android:id="@+id/btnMale"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" Male "
                  android:background="@drawable/bg_btn_gender"
                  android:paddingHorizontal="@dimen/_28sdp"
                  android:paddingVertical="@dimen/_8sdp"
                  android:textColor="@color/material_grey_800"
                  android:layout_marginRight="@dimen/_15sdp"
                  style="@style/textViewRegularBold"
                  android:layout_alignParentRight="true"
                  android:layout_marginVertical="@dimen/_2sdp"
                  android:layout_marginStart="@dimen/_15sdp"
                  android:layout_marginEnd="@dimen/_15sdp"
                  android:textSize="@dimen/_12sdp"
                  />
          </LinearLayout>

          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/btnFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:background="@drawable/bg_btn_gender"
                    android:paddingHorizontal="@dimen/_28sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textColor="@color/material_grey_800"
                    android:layout_marginRight="@dimen/_15sdp"
                    style="@style/textViewRegularBold"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>