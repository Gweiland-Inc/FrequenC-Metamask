<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginViewModel"
            type="com.dev.frequenc.ui_codes.screens.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="20dp"
        tools:context="ui_codes.screens.login.VerifyOtpFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#F7595858"
            android:alpha="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/frequenc_logo_gif"
                    app:layout_constraintBottom_toTopOf="@id/textFrequen"
                    app:layout_constraintHeight_percent=".10"
                    app:layout_constraintTop_toBottomOf="@id/btn_back" />

                <TextView
                    android:id="@+id/textFrequen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="Enter OTP"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toTopOf="@id/otpLaysOuters"
                    app:layout_constraintTop_toBottomOf="@id/imgLogo" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/otpLaysOuters"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >


                    <com.chaos.view.PinView
                        android:id="@+id/otpLays"
                        style="@style/PinWidget.PinView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:cursorVisible="true"
                        android:hint="0"
                        android:inputType="number"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cursorColor="@color/black"
                        app:cursorWidth="2dp"
                        app:itemCount="6"
                        app:itemWidth="43dp"
                        app:itemRadius="4dp"
                        app:itemSpacing="4dp"
                        app:lineWidth="2dp"
                        app:viewType="rectangle"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/btnResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotomedium"
                    android:text="Resend Otp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    app:layout_constraintEnd_toEndOf="@id/otpLaysOuters"
                    app:layout_constraintTop_toBottomOf="@id/otpLaysOuters" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:id="@+id/dividerOtpLays"
                    app:layout_constraintEnd_toEndOf="@id/btnResendOtp"
                    app:layout_constraintStart_toStartOf="@+id/btnResendOtp"
                    app:layout_constraintTop_toBottomOf="@id/btnResendOtp" />


                <ImageView
                    android:id="@+id/btnSubmit"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ellipse"
                    android:focusable="true"
                    android:padding="7dp"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnResendOtp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>