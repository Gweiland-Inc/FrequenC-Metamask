<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginViewModel"
            type="com.dev.frequenc.ui_codes.screens.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg"
        android:padding="20dp"
        tools:context="ui_codes.screens.login.VerifyOtpFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_black_radius"
                        android:alpha="0.4"
                        />


                <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/frequenc_loader"
                        app:layout_constraintBottom_toTopOf="@id/textFrequen"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_30sdp"
                        />

                <TextView
                    android:id="@+id/textFrequen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textViewRegularBold"
                    android:text="Enter OTP"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintBottom_toTopOf="@id/otpLaysOuters"
                    app:layout_constraintTop_toBottomOf="@id/imgLogo" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/otpLaysOuters"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textFrequen"
                    android:layout_marginTop="@dimen/_15sdp"
                    >


                    <com.chaos.view.PinView
                        android:id="@+id/otpLays"
                        style="@style/PinWidget.PinView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:cursorVisible="true"
                        android:hint="0"
                        android:inputType="number"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:lineColor="@color/offwhite"
                        app:cursorColor="@color/black"
                        app:cursorWidth="2dp"
                        app:itemCount="6"
                        app:itemWidth="40dp"
                        app:itemRadius="4dp"
                        app:itemSpacing="5dp"
                        app:lineWidth="2dp"

                        app:viewType="rectangle"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/btnResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/textViewRegularBold"
                    android:text="Resend Otp"
                    android:textColor="@color/off_white"
                    android:textSize="19sp"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="@id/otpLaysOuters"
                    app:layout_constraintTop_toBottomOf="@id/otpLaysOuters" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:id="@+id/dividerOtpLays"
                    app:layout_constraintEnd_toEndOf="@id/btnResendOtp"
                    app:layout_constraintStart_toStartOf="@+id/btnResendOtp"
                    app:layout_constraintTop_toBottomOf="@id/btnResendOtp" />


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnResendOtp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        >
                    <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/arrow_back"
                            android:background="@drawable/ellipse"
                            android:layout_marginRight="@dimen/_15sdp"
                            />

                    <ImageView
                            android:id="@+id/btnSubmit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ellipse"
                            android:padding="7dp"
                            android:layout_toRightOf="@id/btn_back"
                            android:src="@drawable/arrow_right"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>