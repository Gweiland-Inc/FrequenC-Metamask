<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:layout_marginHorizontal="@dimen/_20sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/tvConnectSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulation"
            android:background="@drawable/bg_location"
            android:textColor="@color/font_color_purple"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_18sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/epilogueregular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvConnectSplash"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

            <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_image_match"
                    >

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >

                    <ImageView
                            android:id="@+id/ivProfile1"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_160sdp"
                            android:src="@drawable/profile"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="@dimen/_5sdp"
                            />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/ivAnimSplash"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frequenc_loader"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:elevation="@dimen/_10sdp"
                    />

            <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl1"
                    >

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotationY="4"
                        android:elevation="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >

                <ImageView
                        android:id="@+id/ivProfile2"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop"
                        />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>



    </RelativeLayout>

    <TextView
            android:id="@+id/tvConnectionAcceptMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've both shown intrest in each other!Now go send that first message. Don't wait too long!"
            android:background="@drawable/bg_location"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/epilogueregular"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rlImage"
            />

    <TextView
            android:id="@+id/btnViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start Chat"
            android:background="@drawable/bg_btn_view_profile"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/epilogueregular"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvConnectionAcceptMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            />



</androidx.constraintlayout.widget.ConstraintLayout>