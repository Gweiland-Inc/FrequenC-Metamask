<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="ticketDetailsModel"
            type="com.dev.frequenc.ui_codes.data.models.TicketDetailsModel" />

        <variable
            name="showTicketViewModel"
            type="com.dev.frequenc.ui_codes.screens.booking_process.tickets.ShowTicketViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F2F3"
            tools:context="ui_codes.screens.booking_process.tickets.ShowTicketFragment">

            <include
                android:id="@+id/headerLays"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                layout="@layout/header_outerlays" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/headerLays"
                android:scrollbars="none"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ivBanner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_profile"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_tickets"
                        android:minHeight="@dimen/_157sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.23"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_133sdp"
                        android:background="@drawable/tickets_bg"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="@dimen/_70sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/downTickets">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/upperLays"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            android:layout_marginTop="@dimen/_50sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/downLays"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                >
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintWidth_percent="0.45"
                                android:src="@drawable/blurbackground"
                                android:scaleType="fitXY"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintBottom_toTopOf="@id/tvBookingId"
                                android:id="@+id/ivTicket"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textAlignment="center"
                                android:id="@+id/tvBookingId"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:text="@string/show_text"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintTop_toBottomOf="@id/ivTicket"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/downLays"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintTop_toBottomOf="@id/upperLays"
                            android:padding="@dimen/_5sdp"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                >
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="@id/btnDownload"
                                app:layout_constraintBottom_toBottomOf="@id/btnDownload"
                                app:layout_constraintWidth_percent="0.09"
                                app:layout_constraintEnd_toStartOf="@id/btnDownload"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:id="@+id/btnShare"
                                android:src="@drawable/iv_share"
                                app:layout_constraintDimensionRatio="1:1"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/btnDownload"
                                app:layout_constraintWidth_percent="0.09"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:layout_constraintBottom_toTopOf="@id/headEventName"
                                android:layout_marginTop="@dimen/_60sdp"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:src="@drawable/download"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/btnDownload"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintBottom_toTopOf="@id/tvEventName"
                                android:textSize="14sp"
                                android:id="@+id/headEventName"
                                android:textColor="@color/_828282"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="Event Name"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/headEventName"
                                app:layout_constraintStart_toStartOf="@id/headEventName"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                app:layout_constraintBottom_toTopOf="@id/headDate"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvEventName"
                                android:layout_marginTop="@dimen/_5sdp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tvEventName"
                                app:layout_constraintStart_toStartOf="@id/headEventName"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintBottom_toTopOf="@id/tvDate"
                                android:textSize="14sp"
                                app:layout_constraintWidth_percent="0.45"
                                android:id="@+id/headDate"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/_828282"
                                android:text="Date"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/headDate"
                                app:layout_constraintStart_toStartOf="@id/headDate"
                                app:layout_constraintEnd_toEndOf="@id/headDate"
                                app:layout_constraintBottom_toTopOf="@id/headVenue"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvDate"
                                android:layout_marginTop="@dimen/_5sdp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/headDate"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/headDate"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintWidth_percent="0.45"
                                android:textSize="14sp"
                                android:id="@+id/headTime"
                                android:textColor="@color/_828282"
                                android:text="Time"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@id/tvDate"
                                app:layout_constraintStart_toStartOf="@id/headTime"
                                app:layout_constraintEnd_toEndOf="@id/headTime"
                                android:text="@string/show_text"
                                app:layout_constraintTop_toTopOf="@id/tvDate"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvTime"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tvDate"
                                app:layout_constraintStart_toStartOf="@id/headEventName"
                                android:fontFamily="@font/robotocondensed_bold"
                                android:textSize="14sp"
                                app:layout_constraintWidth_percent="0.45"
                                app:layout_constraintBottom_toTopOf="@id/tvVenue"
                                android:id="@+id/headVenue"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/_828282"
                                android:text="Venue"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/headVenue"
                                app:layout_constraintStart_toStartOf="@id/headVenue"
                                android:text="@string/show_text"
                                app:layout_constraintEnd_toEndOf="@id/headVenue"
                                app:layout_constraintBottom_toTopOf="@id/headAdult"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvVenue"
                                android:layout_marginTop="@dimen/_5sdp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/headVenue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/headVenue"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintWidth_percent="0.45"
                                android:textSize="14sp"
                                android:id="@+id/headTicketType"
                                android:textColor="@color/_828282"
                                android:text="Ticket Type"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/tvVenue"
                                app:layout_constraintBottom_toBottomOf="@id/tvVenue"
                                app:layout_constraintStart_toStartOf="@id/headTicketType"
                                app:layout_constraintEnd_toEndOf="@id/headTicketType"
                                android:text="@string/show_text"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvTicketType"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/tvVenue"
                                app:layout_constraintStart_toStartOf="@id/headEventName"
                                app:layout_constraintBottom_toTopOf="@id/tvAdult"
                                android:fontFamily="@font/robotocondensed_bold"
                                android:textSize="14sp"
                                app:layout_constraintWidth_percent="0.45"
                                android:id="@+id/headAdult"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/_828282"
                                android:text="Adult"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/headAdult"
                                app:layout_constraintStart_toStartOf="@id/headAdult"
                                android:text="@string/show_text"
                                app:layout_constraintEnd_toEndOf="@id/headAdult"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:id="@+id/tvAdult"
                                android:layout_marginTop="@dimen/_5sdp"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/headAdult"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/headAdult"
                                android:fontFamily="@font/robotocondensed_bold"
                                app:layout_constraintWidth_percent="0.45"
                                android:textSize="14sp"
                                android:id="@+id/headTotalPrice"
                                android:textColor="@color/_828282"
                                android:text="Total Price"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/tvAdult"
                                app:layout_constraintStart_toStartOf="@id/headTotalPrice"
                                app:layout_constraintBottom_toBottomOf="@id/tvAdult"
                                app:layout_constraintEnd_toEndOf="@id/headTotalPrice"
                                android:text="@string/show_text"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/purple_200"
                                android:textSize="19sp"
                                android:maxLines="1"
                                android:id="@+id/tvTotalPrice"
                                />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>